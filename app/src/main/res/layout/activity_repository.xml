<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="16dp"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- 상단 제목과 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="16dp"
        android:paddingHorizontal="16dp">

        <TextView
            android:id="@+id/tvFileName"
            android:text="파일명"
            android:textSize="20sp"
            android:textStyle="bold"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="end">

            <ImageButton
                android:id="@+id/btnOcrScan"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_ocr"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="OCR 스캔"
                android:scaleType="fitXY" />

            <ImageButton
                android:id="@+id/btnConvertToFile"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/ic_convert"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:contentDescription="파일로 변환"
                android:scaleType="fitXY" />
        </LinearLayout>
    </LinearLayout>

    <!-- 검색바 -->
    <EditText
        android:id="@+id/searchBar"
        android:hint="영수증 검색"
        android:drawableEnd="@drawable/ic_search"
        android:background="@drawable/search_box"
        android:padding="10dp"
        android:layout_marginTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="48dp"/>

    <!-- 정렬 버튼 -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:padding="8dp">

        <ImageButton
            android:id="@+id/btnSort"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_sort"
            android:contentDescription="정렬"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:scaleType="fitCenter" />
    </LinearLayout>

    <!-- RecyclerView 위나 아래에 추가하세요 -->
    <TextView
        android:id="@+id/tvNoReceipt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="영수증이 없습니다."
        android:textSize="16sp"
        android:gravity="center"
        android:visibility="gone"
        android:textColor="#888888"
        android:layout_marginTop="16dp"/>

    <!-- 영수증 리스트 RecyclerView 추가 -->
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/receiptRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:paddingTop="8dp"/>

</LinearLayout>
